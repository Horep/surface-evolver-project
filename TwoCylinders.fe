parameter height = 3
parameter cyl_angle = 0.1
parameter cyl_len = 5
parameter rad_upper = 1
parameter rad_lower = 1
parameter rad_center = 0.5

#define L_upper sqrt(rad_upper^2 + cyl_len^2)
#define ang_upper atan(rad_upper/cyl_len)
// Lower Cylinder - display
constraint low_disp_con
formula: y^2 + z^2 = 1

// Upper Cylinder - display
constraint up_disp_con
formula: (height-z)^2 + (y*cos(cyl_angle) - x*sin(cyl_angle))^2 = 1

constraint up_disp_con_plane
formula: x*cos(cyl_angle) + y*sin(cyl_angle) + height*z = 0
