8  cyl_len 0 -rad_lower low_disp_con FIXED

// Upper cylinder display

9 -cyl_len*cos(cyl_angle) -cyl_len*sin(cyl_angle) height-rad_upper up_disp_con FIXED
10 -L_upper*cos(cyl_angle+ang_upper) L_upper*sin(cyl_angle+ang_upper) height up_disp_con FIXED
11 -cyl_len*cos(cyl_angle) -cyl_len*sin(cyl_angle) height+rad_upper up_disp_con FIXED
12 -L_upper*cos(cyl_angle+ang_upper) -L_upper*sin(cyl_angle+ang_upper) height up_disp_con FIXED
